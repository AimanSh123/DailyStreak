  public int trap(int[] height) {
       int leftMax = 0; int rightMax = 0; int total = 0;
       int l = 0; int r = height.length - 1;
       while(l <= r){
          if(height[l] <= height[r]){
            if(leftMax <= height[l]){
                leftMax = height[l];
            }
            else{
                total += (leftMax - height[l]);
            }
            l++;
          }
          else{
            if(rightMax <= height[r]){
                rightMax = height[r];
            }
            else{
                total += (rightMax - height[r]);
            }
            r--;
          }
       }
       return total;
    }
