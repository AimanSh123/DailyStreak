 public int leastInterval(char[] tasks, int n) {
        HashMap<Character, Integer> map = new HashMap<>();
        for(char ch : tasks){
            map.put(ch, map.getOrDefault(ch, 0) + 1);
        }int max_occ = 0; char max_ch = 'a';
        for(Map.Entry<Character, Integer> entry: map.entrySet()){
            if(max_occ < entry.getValue()){
               max_occ = Math.max(entry.getValue(), max_occ);
               max_ch = entry.getKey();
            }
        }
        int ideal = (max_occ - 1) * n;
        map.remove(max_ch);
        for(Map.Entry<Character, Integer> entry: map.entrySet()){
            ideal -= Math.min(max_occ - 1, entry.getValue());
        }
        return tasks.length + Math.max(0, ideal);    
    }
